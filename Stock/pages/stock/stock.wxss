/* pages/stock/stock.wxss */
.stockContainer {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding-top: 80rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.stockHeader{
  display: flex;
  align-items: center;
  flex-direction: row;
}

.stockInput{
 border: 1px solid white;
 text-align: center;
 color: white;
 padding: 5px;
 font-size: 15px;
}

.lineView{
  width: 100%;
  height: 1px;
  background-color: #21212C;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}
.stockItemContainer{
 display: flex;
 flex-flow: row wrap;
 justify-content: space-between;
}
.stockRedItem{
  width: 125rpx;
  height: 125rpx;
  border: 1px solid red;
  margin: 2px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.redItem{
  color: red;
  font-size: 13px;
}
.itemLine{
  width: 50%;
  height: 1px;
  background-color: #21212C;
  margin-top: 1rpx;
  margin-bottom: 1rpx;
}
.redItemHint{
  font-size: 12px;
  color: white;
}
.stockGreenItem{
  width: 125rpx;
  height: 125rpx;
  border: 1px solid green;
  margin: 2px;
  margin-top: 20rpx;
  align-items: center;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.greenItem{
  color: green;
  font-size: 13px;
}

page {  
  display: block;  
  min-height: 100%;  
  background-color: #121318;  
}  